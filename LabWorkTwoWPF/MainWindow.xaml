<Window x:Class="LabWorkTwoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWorkTwoWPF"
        mc:Ignorable="d"
        Title="Pinned notes" Height="200" Width="500">
    <Grid>
        <TextBox x:Name="WriteText" HorizontalAlignment="Left" Height="124" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" TextChanged="TextBox_TextChanged"/>
        <ListBox x:Name="ShowText" HorizontalAlignment="Left" Height="149" Margin="249,10,0,0" VerticalAlignment="Top" Width="233"/>
        <Button x:Name="AddButton" Content="Add note" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="221" Click="AddButton_Click"/>
    </Grid>
</Window>
